<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SimpleActivity"
        android:background="@color/bron">

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAlignment="viewEnd"
            android:textSize="@dimen/fontSize" android:text="1111" android:textColor="@color/white"/>
    <Button
            android:text="@string/Bksp"
            android:layout_width="94dp"
            android:layout_height="68dp"
            android:id="@+id/bksp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="14dp" app:layout_constraintTop_toBottomOf="@+id/text"
    />
    <Button
            android:text="@string/clear"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:id="@+id/clear" app:layout_constraintEnd_toStartOf="@id/plusMinus" android:layout_marginEnd="31dp"
            android:layout_marginStart="25dp" app:layout_constraintStart_toEndOf="@+id/bksp"
            android:layout_marginTop="14dp" app:layout_constraintTop_toBottomOf="@+id/text"/>
    <Button
            android:text="@string/plusMinus"
            android:layout_width="89dp"
            android:layout_height="72dp"
            android:id="@+id/plusMinus" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/text" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
    />
    <Button
            android:text="@string/seven"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/sevenButton" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/bksp"
            app:layout_constraintEnd_toStartOf="@+id/eightButton" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/fourButton"/>
    <Button
            android:text="@string/eight"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/eightButton" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/clear" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/sevenButton"
            app:layout_constraintBottom_toTopOf="@+id/fiveButton" app:layout_constraintEnd_toStartOf="@+id/nine"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/nine"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/nine" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/plusMinus"
            app:layout_constraintEnd_toStartOf="@+id/divide"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/sixButton" app:layout_constraintStart_toEndOf="@+id/eightButton"
    />
    <Button
            android:text="@string/divide"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/divide" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/plusMinus" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/nine"
            app:layout_constraintBottom_toTopOf="@+id/mulButton"/>
    <Button
            android:text="@string/four"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/fourButton" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/sevenButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/fiveButton"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/oneButton"/>
    <Button
            android:text="@string/five"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/fiveButton" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/eightButton" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/fourButton"
            app:layout_constraintBottom_toTopOf="@+id/twoButton" app:layout_constraintEnd_toStartOf="@+id/sixButton"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/six"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/sixButton"
            app:layout_constraintStart_toEndOf="@+id/fiveButton" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/nine"
            app:layout_constraintBottom_toTopOf="@+id/threeButton" app:layout_constraintEnd_toStartOf="@+id/mulButton"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/mul"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/mulButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/divide"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/sixButton"
            app:layout_constraintBottom_toTopOf="@+id/minButton"/>
    <Button
            android:text="@string/one"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/oneButton" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/fourButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/twoButton"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/zeroButton"/>
    <Button
            android:text="@string/two"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/twoButton" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/fiveButton"
            app:layout_constraintStart_toEndOf="@+id/oneButton" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/dot" app:layout_constraintEnd_toStartOf="@+id/threeButton"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/three"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/threeButton" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/sixButton" app:layout_constraintEnd_toStartOf="@+id/minButton"
            app:layout_constraintBottom_toTopOf="@+id/equal" app:layout_constraintStart_toEndOf="@+id/twoButton"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/min"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/minButton" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/mulButton" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/threeButton"
            app:layout_constraintBottom_toTopOf="@+id/plusButton" android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/zero"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/zeroButton" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/oneButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toStartOf="@+id/dot" android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/dot"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/dot" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/twoButton"
            app:layout_constraintStart_toEndOf="@+id/zeroButton" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toStartOf="@+id/equal" android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/equal"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/equal" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/threeButton"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toStartOf="@+id/plusButton" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/dot"/>
    <Button
            android:text="@string/plus"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:id="@+id/plusButton" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/minButton" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toEndOf="@+id/equal" android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>