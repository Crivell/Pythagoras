<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SimpleActivity"
        android:background="@drawable/simple">

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAlignment="viewEnd"
            android:textSize="@dimen/fontSize" android:textColor="@color/white"/>
    <Button

            android:layout_width="133dp"
            android:layout_height="107dp"
            android:id="@+id/one"
            android:background="@android:color/transparent" app:layout_constraintEnd_toStartOf="@+id/two"
            android:layout_marginEnd="5dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="3dp"
            android:layout_marginTop="259dp" app:layout_constraintTop_toBottomOf="@+id/text" android:elevation="0dp"/>
    <Button

            android:layout_width="126dp"
            android:layout_height="105dp"
            android:id="@+id/two"
            android:background="@android:color/transparent" app:layout_constraintEnd_toStartOf="@+id/three" android:layout_marginEnd="6dp"
            android:layout_marginStart="5dp" app:layout_constraintStart_toEndOf="@+id/one"
            android:layout_marginTop="261dp" app:layout_constraintTop_toBottomOf="@+id/text"/>
    <Button

            android:layout_width="135dp"
            android:layout_height="105dp"
            android:id="@+id/three"
            android:background="@android:color/transparent" android:layout_marginEnd="3dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="5dp" app:layout_constraintStart_toEndOf="@+id/two"
            android:layout_marginTop="261dp" app:layout_constraintTop_toBottomOf="@+id/text"/>
    <Button

            android:layout_width="136dp"
            android:layout_height="104dp"
            android:id="@+id/four"
            android:background="@android:color/transparent" app:layout_constraintTop_toBottomOf="@+id/one" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/seven" app:layout_constraintStart_toStartOf="parent"/>
    <Button

            android:layout_width="130dp"
            android:layout_height="102dp"
            android:id="@+id/five"
            android:background="@android:color/transparent" app:layout_constraintTop_toBottomOf="@+id/two" android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toTopOf="@+id/eight" app:layout_constraintStart_toEndOf="@+id/four"
            android:layout_marginStart="6dp" app:layout_constraintEnd_toStartOf="@+id/six"
            android:layout_marginEnd="1dp"/>
    <Button

            android:layout_width="132dp"
            android:layout_height="103dp"
            android:id="@+id/six"
            android:background="@android:color/transparent" android:layout_marginEnd="6dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/three" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/nine"/>
    <Button

            android:layout_width="134dp"
            android:layout_height="98dp"
            android:id="@+id/seven"
            android:background="@android:color/transparent" android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/four"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/button10"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button

            android:layout_width="127dp"
            android:layout_height="102dp"
            android:id="@+id/eight"
            android:background="@android:color/transparent" android:layout_marginTop="6dp" app:layout_constraintTop_toBottomOf="@+id/five"
            app:layout_constraintBottom_toTopOf="@+id/zero" app:layout_constraintStart_toEndOf="@+id/button10"
            android:layout_marginStart="7dp" app:layout_constraintEnd_toStartOf="@+id/nine"
            android:layout_marginEnd="5dp"/>
    <Button

            android:layout_width="132dp"
            android:layout_height="99dp"
            android:id="@+id/nine"
            android:background="@android:color/transparent" android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/six"
            android:layout_marginBottom="3dp" app:layout_constraintBottom_toTopOf="@+id/button12"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="5dp"/>
    <Button

            android:layout_width="132dp"
            android:layout_height="105dp"
            android:id="@+id/button10"
            android:background="@android:color/transparent" android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/seven"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="3dp"/>
    <Button

            android:layout_width="126dp"
            android:layout_height="100dp"
            android:id="@+id/zero"
            android:background="@android:color/transparent" android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/eight"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/button10"
            android:layout_marginStart="6dp" app:layout_constraintEnd_toStartOf="@+id/button12"
            android:layout_marginEnd="7dp"/>
    <Button

            android:layout_width="129dp"
            android:layout_height="100dp"
            android:id="@+id/button12"
            android:background="@android:color/transparent" android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/nine"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="2dp"
            app:layout_constraintStart_toEndOf="@+id/zero" android:layout_marginStart="7dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>