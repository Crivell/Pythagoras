<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SimpleActivity"
        android:background="@drawable/advance">


    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text"
            android:layout_width="478dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAlignment="viewEnd"
            android:textSize="@dimen/fontSize" android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/resoult"
            android:layout_width="479dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAlignment="viewEnd"
            android:textSize="@dimen/fontSize" android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text"
            app:layout_constraintBottom_toTopOf="@+id/equal"
            android:layout_marginBottom="16dp" app:layout_constraintVertical_bias="0.49"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="28dp"
            android:layout_height="43dp"
            android:id="@+id/left"
            app:layout_constraintTop_toBottomOf="@+id/resoult" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="400dp"
            app:layout_constraintEnd_toStartOf="@+id/right" android:layout_marginTop="40dp"
    />
    <Button
            android:background="@android:color/transparent"
            android:layout_width="27dp"
            android:layout_height="68dp"
            android:id="@+id/right" app:layout_constraintStart_toEndOf="@+id/left"
            app:layout_constraintTop_toBottomOf="@+id/resoult" app:layout_constraintBottom_toTopOf="@+id/tan"
            app:layout_constraintEnd_toStartOf="@+id/button3" android:layout_marginTop="20dp"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="26dp"
            android:layout_height="53dp"
            android:id="@+id/button3" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/resoult"
            app:layout_constraintStart_toEndOf="@+id/right" android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/tan" app:layout_constraintEnd_toStartOf="@+id/plusMinus"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="31dp"
            android:layout_height="46dp"
            android:id="@+id/plusMinus" app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/resoult" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/tan" app:layout_constraintEnd_toStartOf="@+id/sub"
            android:layout_marginTop="30dp"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="29dp"
            android:layout_height="wrap_content"
            android:id="@+id/sub"
            app:layout_constraintTop_toBottomOf="@+id/resoult" app:layout_constraintStart_toEndOf="@+id/plusMinus"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/one"
            app:layout_constraintEnd_toStartOf="@+id/sum" android:layout_marginTop="30dp"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:id="@+id/sum"
            app:layout_constraintTop_toBottomOf="@+id/resoult" app:layout_constraintStart_toEndOf="@+id/sub"
            app:layout_constraintBottom_toTopOf="@+id/two"
            app:layout_constraintEnd_toStartOf="@+id/equal" android:layout_marginEnd="1dp"
            android:layout_marginTop="30dp"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="58dp"
            android:layout_height="56dp"
            android:id="@+id/equal" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/resoult" app:layout_constraintStart_toEndOf="@+id/sum"
            android:layout_marginBottom="5dp" app:layout_constraintBottom_toTopOf="@+id/one"
            app:layout_constraintEnd_toStartOf="@+id/mul"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="31dp"
            android:layout_height="wrap_content"
            android:id="@+id/mul"
            app:layout_constraintTop_toBottomOf="@+id/resoult" app:layout_constraintStart_toEndOf="@+id/equal"
            android:layout_marginBottom="3dp" app:layout_constraintBottom_toTopOf="@+id/two"
            app:layout_constraintEnd_toStartOf="@+id/divide" android:layout_marginEnd="3dp"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="30dp"
            android:layout_height="63dp"
            android:id="@+id/divide"
            app:layout_constraintTop_toBottomOf="@+id/resoult"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/three"
            app:layout_constraintEnd_toStartOf="@+id/dot"
            app:layout_constraintStart_toEndOf="@+id/mul" android:layout_marginStart="3dp"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="29dp"
            android:layout_height="60dp"
            android:id="@+id/dot" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/resoult" app:layout_constraintStart_toEndOf="@+id/divide"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="2dp" android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toTopOf="@+id/three" app:layout_constraintVertical_chainStyle="spread_inside"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="56dp"
            android:layout_height="65dp"
            android:id="@+id/sin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="230dp" android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/resoult" app:layout_constraintBottom_toTopOf="@+id/log"
            app:layout_constraintEnd_toStartOf="@+id/cos" android:layout_marginEnd="2dp"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="68dp"
            android:layout_height="63dp"
            android:id="@+id/cos"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@+id/sin" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/left" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/ln" app:layout_constraintEnd_toStartOf="@+id/tan"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="84dp"
            android:layout_height="54dp"
            android:id="@+id/tan"
            app:layout_constraintStart_toEndOf="@+id/cos" app:layout_constraintTop_toBottomOf="@+id/right"
            android:layout_marginBottom="6dp" app:layout_constraintBottom_toTopOf="@+id/log2"
            app:layout_constraintEnd_toStartOf="@+id/one"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:id="@+id/one" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/sum" app:layout_constraintStart_toEndOf="@+id/tan"
            app:layout_constraintBottom_toTopOf="@+id/four" app:layout_constraintEnd_toStartOf="@+id/two"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="75dp"
            android:layout_height="48dp"
            android:id="@+id/two" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/equal" app:layout_constraintStart_toEndOf="@+id/one"
            app:layout_constraintEnd_toStartOf="@+id/divide" android:layout_marginEnd="8dp"
            android:layout_marginBottom="2dp" app:layout_constraintBottom_toTopOf="@+id/five"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:id="@+id/three" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/dot" android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/two" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="1dp" android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toTopOf="@+id/six"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="78dp"
            android:layout_height="62dp"
            android:id="@+id/log"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="260dp" app:layout_constraintTop_toBottomOf="@+id/sin"
            app:layout_constraintBottom_toTopOf="@+id/pown" app:layout_constraintEnd_toStartOf="@+id/ln"
            android:layout_marginEnd="2dp"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="88dp"
            android:layout_height="54dp"
            android:id="@+id/ln" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/cos" android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@+id/log" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/pow2" app:layout_constraintEnd_toStartOf="@+id/log2"
            android:layout_marginEnd="2dp"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/log2" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/tan" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/ln" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/percent" app:layout_constraintEnd_toStartOf="@+id/four"
            android:layout_marginEnd="4dp"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="83dp"
            android:layout_height="54dp"
            android:id="@+id/four" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/one" app:layout_constraintStart_toEndOf="@+id/log2"
            app:layout_constraintEnd_toStartOf="@+id/five" android:layout_marginEnd="3dp"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/log2"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/five"
            app:layout_constraintTop_toBottomOf="@+id/two" android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/four" app:layout_constraintEnd_toStartOf="@+id/six"
            android:layout_marginEnd="8dp" android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/eight" android:layout_marginTop="10dp"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:id="@+id/six"
            app:layout_constraintTop_toBottomOf="@+id/three" android:layout_marginStart="7dp"
            app:layout_constraintStart_toEndOf="@+id/five" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="23dp" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/eight"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="52dp"
            android:layout_height="63dp"
            android:id="@+id/pown"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="260dp" app:layout_constraintTop_toBottomOf="@+id/log"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="63dp"
            app:layout_constraintEnd_toStartOf="@+id/pow2" android:layout_marginEnd="9dp"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="52dp"
            android:layout_height="73dp"
            android:id="@+id/pow2" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/ln" android:layout_marginStart="9dp"
            app:layout_constraintStart_toEndOf="@+id/pown" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp" app:layout_constraintEnd_toStartOf="@+id/percent"
            android:layout_marginEnd="11dp"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="75dp"
            android:layout_height="64dp"
            android:id="@+id/percent" android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/log2" android:layout_marginStart="11dp"
            app:layout_constraintStart_toEndOf="@+id/pow2" app:layout_constraintBottom_toTopOf="@+id/bksp"
            app:layout_constraintEnd_toStartOf="@+id/seven" android:layout_marginEnd="3dp"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="56dp"
            android:layout_height="45dp"
            android:id="@+id/seven"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/four" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/bksp" app:layout_constraintStart_toEndOf="@+id/percent"
            android:layout_marginStart="2dp" app:layout_constraintEnd_toStartOf="@+id/eight"
            android:layout_marginEnd="2dp"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="73dp"
            android:layout_height="36dp"
            android:id="@+id/eight" android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/five" android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/seven" app:layout_constraintEnd_toStartOf="@+id/nine"
            android:layout_marginEnd="8dp" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/zero"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:id="@+id/nine" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/six" android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/eight" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="6dp" android:layout_marginBottom="23dp"
            app:layout_constraintBottom_toTopOf="@+id/clear"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="64dp"
            android:layout_height="49dp"
            android:id="@+id/bksp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="480dp"
            android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/seven"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="3dp"
            app:layout_constraintEnd_toStartOf="@+id/zero" app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="79dp"
            android:layout_height="45dp"
            android:id="@+id/zero" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/eight" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" app:layout_constraintStart_toEndOf="@+id/bksp"
            app:layout_constraintEnd_toStartOf="@+id/clear"/>
    <Button
            android:background="@android:color/transparent"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:id="@+id/clear"
            android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/nine"
            app:layout_constraintStart_toEndOf="@+id/zero" android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="6dp"/>

</android.support.constraint.ConstraintLayout>