<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SimpleActivity"
        android:background="@drawable/advance">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/linearLayout2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="viewEnd"
                    android:textSize="@dimen/fontSize" android:textColor="@color/white"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/resoult"
                    android:layout_height="50dp"
                    android:textAlignment="viewEnd"
                    android:textSize="@dimen/fontSize" android:textColor="@color/white"
                    android:layout_width="match_parent"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="413dp"
                    android:layout_height="match_parent" android:id="@+id/button5" android:layout_weight="1"/>
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    android:id="@+id/left"
                    tools:layout_editor_absoluteY="146dp" tools:layout_editor_absoluteX="400dp"/>
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="33dp"
                    android:layout_height="match_parent"
                    android:id="@+id/right"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:id="@+id/button3"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="26dp"
                    android:layout_height="match_parent"
                    android:id="@+id/plusMinus"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="29dp"
                    android:layout_height="match_parent"
                    android:id="@+id/sub"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="29dp"
                    android:layout_height="match_parent"
                    android:id="@+id/sum"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="42dp"
                    android:layout_height="match_parent"
                    android:id="@+id/equal"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:id="@+id/mul"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:id="@+id/divide"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    android:id="@+id/dot"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:layout_width="280dp"
                    android:layout_height="match_parent" android:id="@+id/button22" android:layout_weight="1"
                    android:background="@android:color/transparent"/>
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="71dp"
                    android:layout_height="match_parent"
                    android:id="@+id/sin"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="74dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cos"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="71dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tan"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:id="@+id/one"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:id="@+id/two"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:id="@+id/three"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:layout_width="280dp"
                    android:layout_height="match_parent" android:id="@+id/button29" android:layout_weight="1"
                    android:background="@android:color/transparent"/>
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="69dp"
                    android:layout_height="match_parent"
                    android:id="@+id/log"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ln"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    android:id="@+id/log2"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="76dp"
                    android:layout_height="match_parent"
                    android:id="@+id/four"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:id="@+id/five"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:id="@+id/six"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:layout_width="282dp"
                    android:layout_height="match_parent" android:id="@+id/button30" android:layout_weight="1"
                    android:background="@android:color/transparent"/>
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    android:id="@+id/pown"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:id="@+id/pow2"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="76dp"
                    android:layout_height="match_parent"
                    android:id="@+id/percent"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:id="@+id/seven"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:id="@+id/eight"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:id="@+id/nine"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="68dp">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/button31" android:layout_weight="1"
                    android:background="@android:color/transparent"/>
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/bksp"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:id="@+id/zero"
            />
            <Button
                    android:background="@android:color/transparent"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:id="@+id/clear"
            />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>